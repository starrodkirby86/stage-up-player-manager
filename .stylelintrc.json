{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "tailwind", "layer"]
      }
    ],
    "block-no-empty": null,
    "unit-allowed-list": ["px", "em", "rem", "s", "vw", "vh", "%"],
    "no-invalid-position-at-import-rule": [true, {
      "ignoreAtRules": ["tailwind"]
    }]
  }
}
